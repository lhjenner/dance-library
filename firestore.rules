rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Playlists: users can only access their own playlists
    match /playlists/{playlistId} {
      allow read, write: if isAuthenticated() && 
                            resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
    }
    
    // Videos: users can only access their own videos
    match /videos/{videoId} {
      allow read, write: if isAuthenticated() && 
                            resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Segments subcollection: inherit parent video's access control
      match /segments/{segmentId} {
        allow read, write, create, delete: if isAuthenticated() && 
                                             get(/databases/$(database)/documents/videos/$(videoId)).data.userId == request.auth.uid;
      }
    }
    
    // Collection group query for segments (used for performance optimization)
    match /{path=**}/segments/{segmentId} {
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
    }
    
    // User preferences: users can only access their own preferences
    match /userPreferences/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}